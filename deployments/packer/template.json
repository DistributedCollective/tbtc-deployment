    {
      "type": "shell",
      "script": "./provisioning/install-solidity.sh"
    },
    {
      "type": "shell",
      "script": "./provisioning/install-truffle.sh"
    },
    {
      "type": "shell",
      "script": "./provisioning/install-protobuf.sh"
    },
    {
      "type": "shell",
      "script": "./provisioning/install-pyenv.sh"
    },
    {
      "type": "shell",
      "script": "./provisioning/install-pipenv.sh"
